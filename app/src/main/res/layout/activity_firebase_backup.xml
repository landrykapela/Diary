<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right_end"
        android:layout_marginStart="@dimen/margin_left_start"
        android:layout_marginRight="@dimen/margin_right_end"
        android:layout_marginLeft="@dimen/margin_left_start"
        android:layout_marginTop="48dp"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right_end"
        android:layout_marginLeft="@dimen/margin_left_start"
        android:layout_marginRight="@dimen/margin_right_end"
        android:layout_marginStart="@dimen/margin_left_start"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="@string/backup_form_text"
        android:fontFamily="@string/intro_label_font"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        tools:targetApi="jelly_bean" />


    <ImageView
        android:id="@+id/ivCloudBuckup"
        android:layout_width="@dimen/mood_image_large"
        android:layout_height="@dimen/mood_image_large"
        android:layout_marginEnd="@dimen/margin_right_end"
        android:layout_marginStart="@dimen/margin_left_start"
        android:layout_marginRight="@dimen/margin_right_end"
        android:layout_marginLeft="@dimen/margin_left_start"
        android:layout_marginTop="52dp"
        android:src="@mipmap/ic_cloud_upload_white_48dp"
        android:contentDescription="@string/backup_to_cloud" />
    <TextView
        android:id="@+id/tvLabelUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right_end"
        android:layout_marginLeft="@dimen/margin_left_start"
        android:layout_marginRight="@dimen/margin_right_end"
        android:layout_marginStart="@dimen/margin_left_start"
        android:layout_marginTop="@dimen/list_item_horizontal_margin"
        android:layout_gravity="center"
        android:text="@string/backup_to_cloud"
        android:fontFamily="@string/intro_label_font"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"
        tools:targetApi="jelly_bean" />
    <Button
        android:id="@+id/restore_backup_button"
        android:layout_width="@dimen/button_width_wide"
        android:layout_height="@dimen/button_height_wide"
        android:layout_marginEnd="@dimen/margin_right_end"
        android:layout_marginStart="@dimen/margin_left_start"
        android:layout_marginRight="@dimen/margin_right_end"
        android:layout_marginLeft="@dimen/margin_left_start"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_background_white"
        android:text="@string/restore"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/cancel_backup_button"
        android:layout_width="@dimen/button_width_wide"
        android:layout_height="@dimen/button_height_wide"
        android:layout_marginEnd="@dimen/margin_right_end"
        android:layout_marginLeft="@dimen/margin_left_start"
        android:layout_marginRight="@dimen/margin_right_end"
        android:layout_marginStart="@dimen/margin_left_start"
        android:layout_marginTop="@dimen/list_item_horizontal_margin"
        android:background="@drawable/button_background_accent"
        android:text="@string/cancel"
        android:textColor="@color/white" />
</LinearLayout>
</ScrollView>